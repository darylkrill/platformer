<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <Console name="NoMeta" target="SYSTEM_OUT">
            <PatternLayout pattern="%msg"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="warn">
            <AppenderRef ref="Console" />
        </Root>
        <Logger name="com.stexni" level="debug" additivity="false">
            <AppenderRef ref="Console" />
        </Logger>
        <Logger name="com.stexni.platformer.StdOutRenderer" level="debug" additivity="false">
            <AppenderRef ref="NoMeta" />
        </Logger>
    </Loggers>
</Configuration>